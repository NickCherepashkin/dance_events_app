<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DanceEvents" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="android:statusBarColor">@color/dark_yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="search_style">
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/ic_search</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="appCompatStyle">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/yellow</item>
    </style>

</resources>